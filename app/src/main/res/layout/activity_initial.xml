<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.fornax.bought.activity.InitialActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout android:id="@+id/container" android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:layout_width="259dp"
            android:layout_height="70dp"
            android:text="Vamos Lá!"
            android:id="@+id/btn_iniciar"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_gravity="center"
            android:weightSum="1"
            android:gravity="center_vertical|center_horizontal|bottom"
            android:textAlignment="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bem Vindo ao"
                android:id="@+id/txtBemVindo"
                android:textColor="#fffdfd"
                android:layout_weight="0.32"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textIsSelectable="false"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PÃO DE AÇUCAR"
                android:id="@+id/txtNomeMercado"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.90"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView android:src="@drawable/logo"
            android:layout_width="517dp"
            android:layout_height="97dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.fornax.bought.fragment.NavigationDrawerFragment"
        tools:layout="@layout/drawer_initial" />

</android.support.v4.widget.DrawerLayout>
