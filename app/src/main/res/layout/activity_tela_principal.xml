<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Framelayout usado para mostrar os fragmentos -->
    <FrameLayout
        android:id="@+id/frame_atual"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ListView do menu 
    	layout_width : até quanto o menu vai p/ a direita 
    	layout_height: altura
    	layout_gravity:
    	background: cor de fundo dos itens não selecionados
    -->
    <ListView
        android:id="@+id/drawer_list_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1px"
        android:listSelector="@drawable/list_selector_drawer"
        android:background="@color/list_background"/>
</android.support.v4.widget.DrawerLayout>