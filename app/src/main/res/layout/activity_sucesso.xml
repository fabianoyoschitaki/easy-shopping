<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.fornax.bought.activity.SucessoActivity"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="A compra foi gerada com sucesso!"
            android:textColor="#342423"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.30"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.38"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="035-654-846-3546"
            android:textColor="#fa8a01"
            android:id="@+id/txtCodigoCompra"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="50dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton" />

    </LinearLayout>
</LinearLayout>
