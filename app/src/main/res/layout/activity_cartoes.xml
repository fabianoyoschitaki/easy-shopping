<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme.Dark"
    tools:context="com.fornax.bought.activity.CartoesActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.43"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_weight="0.55"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:id="@+id/textNomePessoa"
            android:paddingTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtNumeroCartao" />

        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dtValidade"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="243dp"
            android:layout_height="60dp"
            android:text="Pronto"
            android:id="@+id/btn_cadastrar_cartao" />
    </LinearLayout>

</LinearLayout>
