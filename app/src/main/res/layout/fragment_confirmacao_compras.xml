<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_button_text_color"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Confira sua compra!"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="40dp"
                    android:id="@+id/txtConfirmarMsg"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Carrinho"
                    android:textColor="#f1ea7724"
                    android:background="#f1faf9f7"
                    android:drawableRight="@drawable/arrowright"
                    android:id="@+id/btnConfCarrinho"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f1faf9f7"
                    android:text="    Extra"
                    android:textColor="#f1ea7724"
                    android:drawableRight="@drawable/arrowright"
                    android:id="@+id/btnConfLocal"
                    android:layout_marginTop="10dp"
                    android:contextClickable="true" />


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30dp"
                    android:id="@+id/txtValorConfirmacao"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="      PAGAR"
                    android:background="#f1faf9f7"
                    android:textColor="#f1ea7724"
                    android:textAlignment="center"
                    android:id="@+id/btnPagar"
                    android:layout_marginTop="20dp"
                    android:contextClickable="true"
                    android:drawableRight="@drawable/paypal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>